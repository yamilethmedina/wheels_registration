<%= simple_form_for (@event, :html {class: "form-horizontal"})  do |f| %>
  <%= f.input :event_name, as: :string %>
  <%= f.input :location, as: :text %>
  <%= f.input :event_date, as: :date %>
  <%= f.input :event_time, as: :time %>
  <%= f.input :description, as: :text %>
  <%= f.input :category, as: :text %>
  <div class="form-actions">
  <%= f.button :submit %>
  </div>
<% end %>