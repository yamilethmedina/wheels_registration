<%= simple_form_for @event do |f| %>
  <div class="form-inputs">
    <%= f.input :event_name, as: :string %>
    <%= f.input :location, as: :text %>
    <%= f.input :event_date_time, as: 'datetime', :ampm => true %>
    <%= f.input :description, as: :text %>
    <%= f.input :organizer, as: :text %>
    <%= f.input :category, as: :text %>
   
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
 <% end %>