
<%= simple_form_for @event do |f| %>
 <%= f.collection_check_boxes :options, [[biking, 'Biking'] ,[running, 'Running']], [hiking, 'Hiking']], [[comm_event, 'Community Events']], [[ecga_summit, 'ECGA Summit']], :first, :last %>
<% end %>


<%= simple_form_for (@event, html: {class: "form-horizontal"})  do |f| %>
  <%= f.input :event_name, as: :text %>
  <%= f.input :location, as: :text %>
  <%= f.input :description, as: :text %>
  <%= f.input :category, as: :check_boxes %>
  <%= f.button :submit %>
<% end %>