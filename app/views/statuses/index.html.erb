<div class="page-header">
<h1>Who's attending what at WHEELS?</h1>
</div>

<%= link_to "Sign Up for an Event", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
  <span class="admin">| <%= link_to "Edit", edit_status_path(status) %> |
  <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this event from your schedule?"} %>
  </span>
    <strong> <%= status.user.full_name %>  </strong>
  </div>
</div>


<% end %>