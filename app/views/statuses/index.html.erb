<div class="page-header">
<h1>Who's attending what at WHEELS?</h1>
</div>

<%= link_to "Post a Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <strong> <%= status.user.full_name %>  </strong>
    <p><%= status.content %></p>
    <div class="meta">
      <% link_name = "#{time_ago_in_words(status.created_at)} ago" %>
      <%= link_to link_name, status %>
      <span class="admin">| <%= link_to "Edit", edit_status_path(status) %> |
        <% message = "Are you sure you want to delete this event from your schedule?" %>
        <%= link_to "Delete", status, method: :delete, data: { confirm: message} %>
      </span>
    </div>
  </div>
<% end %>
